# install mlflow
library(devtools)

# get r pre-requisite packages for mlflow
devtools::install_github("mlflow/mlflow", subdir = "mlflow/R/mlflow", threads=4)

# allow R to find miniconda
Sys.setenv(PATH = paste('/opt/conda/bin',Sys.getenv('PATH'), sep=':'))

# install mlflow components
mlflow::mlflow_install()

